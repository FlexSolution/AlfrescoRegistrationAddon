<?xml version="1.0" encoding="UTF-8"?>
<model name="fswf:newUsersReviewWorkflow" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <!-- Optional meta-data about the model -->
    <description>Workflow Model for Repo Extension X</description>
    <author>My Name</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco Workflow Model Definitions -->
        <import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
        <import uri="http://www.flex-solution.com/model/newUser/1.0" prefix="fs"/>
        <import uri="http://www.flex-solution.com/model/forms/1.0" prefix="frm"/>
    </imports>

    <!-- Custom namespace for your domain -->
    <namespaces>
        <namespace uri="http://www.flex-solution.com/model/newUsersReviewWorkflow/1.0" prefix="fswf"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <types>

        <type name="fswf:userReviewingTask">
            <parent>bpm:workflowTask</parent>

            <properties>
                <property name="fswf:doApprove">
                    <type>d:boolean</type>
                </property>
            </properties>

            <mandatory-aspects>
                <aspect>fs:newUserAspect</aspect>
                <aspect>fs:newRejectedUserAspect</aspect>
                <aspect>bpm:groupAssignee</aspect>
                <aspect>frm:userCredentials</aspect>

            </mandatory-aspects>
        </type>
    </types>
</model>